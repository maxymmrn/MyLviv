<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".complain_status">

    <LinearLayout
        style="@style/LayoutInLayoutInTop">

        <ImageView
            android:id="@+id/complaint_status_back_from_menu"
            style="@style/Arrow" />

        <LinearLayout
            style="@style/LayoutInTop">

            <TextView
                style="@style/Title"
                android:id="@+id/complaint_status_title" />

        </LinearLayout>

        <ImageView
            android:id="@+id/complaint_status_avatar"
            style="@style/SmallIcon"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/complaint_status_image"
        android:layout_width="480dp"
        android:layout_height="320dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Адреса:"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/complaint_status_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Статус:"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/complaint_status_progress_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Відповідальна установа: " />

            <TextView
                android:id="@+id/complaint_status_responsible_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Опис: "/>

            <TextView
                android:id="@+id/complaint_status_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>